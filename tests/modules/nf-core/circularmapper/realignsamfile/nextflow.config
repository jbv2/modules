process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }

    withName: CIRCULARMAPPER_REALIGNSAMFILE {
        ext.args = { [
            '-f true',
            '-x false',
        ].join(' ') }
        ext.prefix = { params.elongation_factor ? "${params.elongation_factor}" : '500' }
    }

}
