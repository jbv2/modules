nextflow_process {

    name "Test Process CIRCULARMAPPER_REALIGNSAMFILE"
    script "../main.nf"
    process "CIRCULARMAPPER_REALIGNSAMFILE"

    tag "modules"
    tag "modules_nfcore"
    tag "circularmapper"
    tag "circularmapper/realignsamfile"

    test("sarscov2 - bam - fasta") {

        setup {

                run("CIRCULARMAPPER_CIRCULARGENERATOR") {
                    script "../../circulargenerator/main.nf"
                    process {
                    """
                    input[0] = [
                        [ id:'test' ], // meta map
                        file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                        ]
                    input[1] = 500
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = file(params.test_data['sarscov2']['illumina']['test_single_end_bam'], checkIfExists: true)
                input[1] = CIRCULARMAPPER_CIRCULARGENERATOR.out.fasta
                input[2] = 500
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
                // See https://nf-co.re/docs/contributing/tutorials/nf-test_assertions for more information and examples.
            )
        }

    }

