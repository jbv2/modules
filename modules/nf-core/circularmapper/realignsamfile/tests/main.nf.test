nextflow_process {

    name "Test Process CIRCULARMAPPER_REALIGNSAMFILE"
    script "../main.nf"
    process "CIRCULARMAPPER_REALIGNSAMFILE"

    tag "modules"
    tag "modules_nfcore"
    tag "circularmapper"
    tag "circularmapper/realignsamfile"

    test("sarscov2 - bam - fasta") {

        setup {

            run("CIRCULARMAPPER_CIRCULARGENERATOR") {
                script "../../circulargenerator/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test' ], // meta map
                        file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                        ]
                    input[1] = 500
                    """
                }
            }

            run("BWA_INDEX") {
            script "../../../bwa/index/main.nf"
                process {
                    """
                    input[0] = [
                        [id: 'test'],
                        CIRCULARMAPPER_CIRCULARGENERATOR.out.fasta
                    ]
                    """
                }
            }

            run("BWA_ALN") {
                script "../../../bwa/aln/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test', single_end:true ], // meta map
                        file(params.test_data['sarscov2']['illumina']['test_1_fastq_gz'], checkIfExists: true)
                    ]
                    input [1] = BWA_INDEX.out.index
                    """
                }
            }

            run("BWA_SAMSE") {
                script "../../../bwa/samse/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'test', single_end:true ], // meta map
                        file(params.test_data['sarscov2']['illumina']['test_1_fastq_gz'], checkIfExists: true)
                    ].join(BWA_ALN.out.bam)
                    input[1] = BWA_INDEX.out.index
                    """
                }
            }
        }

        when {
            process {
                """
                input[0] = BWA_SAMSE.out.bam
                input[1] = [
                        [ id:'test' ], // meta map
                        file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                    ]
                input[2] = 500
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
                // See https://nf-co.re/docs/contributing/tutorials/nf-test_assertions for more information and examples.
            )
        }

    }

    test("sarscov2 - bam - fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id: "test" ], //meta map
                    file(params.test_data['sarscov2']['illumina']['test_single_end_bam'], checkIfExists: true)
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true)
                ]
                input[2] = 500
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
                // See https://nf-co.re/docs/contributing/tutorials/nf-test_assertions for more information and examples.
            )
        }
    }

}
